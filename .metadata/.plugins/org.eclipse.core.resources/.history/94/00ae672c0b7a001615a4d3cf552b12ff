import java.util.Random;  //Imports the Random Class

public class TestDie{
	public static void main(String [] args){
		int N = 100;
		int oneCount = 0;
		int twoCount = 0;
		int threeCount = 0;
		int fourCount = 0;
		int fiveCount = 0;
		int sixCount = 0;
		Die D1 = new Die();
		for(int i = 0; i < N; i++){
		D1.roll();
		int topVal = D1.getTop();
			if(topVal == 1){
				oneCount = oneCount + 1;
			} else if(topVal == 2) {
				twoCount = twoCount + 1;
			} else if(topVal == 3){
				threeCount = threeCount + 1;
			} else if (topVal == 4){
				fourCount = fourCount + 1;
			} else if(topVal == 5){
				fiveCount = fiveCount + 1;
			} else if(topVal == 6){
				sixCount = sixCount + 1;
			}
		}
		
		System.out.println("The amount of 1's rolled is: " + oneCount);
		System.out.println("The amount of 2's rolled is: " + twoCount);
		System.out.println("The amount of 3's rolled is: " + threeCount);
		System.out.println("The amount of 4's rolled is: " + fourCount);
		System.out.println("The amount of 5's rolled is: " + fiveCount);
		System.out.println("The amount of 6's rolled is: " + sixCount);
	}
}